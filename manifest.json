{
    "manifest_version": 3,
    "name": "LinkedIn AdBlocker",
    "version": "1.0",
    "description": "Blocks LinkedIn ads to enhance user experience.",
    "action": {
        "default_title": "LinkedIn AdBlocker"
    },
    "permissions": [
        "scripting",
        "webNavigation"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    }
}